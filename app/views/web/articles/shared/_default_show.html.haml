.news.articles.container-big
  %h3.title
    = @article.title
  .news-content
    .container-big
      .row.news-row-content.large-collapse.medium-collapse
        -# small-push-4 - для удобства, чтобы @article.body было в конце файла
        .small-12.columns
          = raw(@article.body)
          - @article.attachments.each do |document|
            = render_element 'mic_document', document: document
    %hr
