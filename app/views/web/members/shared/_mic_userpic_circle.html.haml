- if member.confirmed?
  .mic-userpic-circle.link{ data: { href: member_path(member) }, style: "background-image: url(#{member.avatar}); margin-left: 39px" }
- else
  .mic-userpic-circle{ style: "background-image: url(#{member.element_avatar}); margin-left: 39px" }
.name
  - if member.confirmed?
    %a.text{ href: member_path(member) }
      = member.short_name
  - else
    %span.text
      = member.short_name
