- title @event.title
.event-container{ style: "background-image: url(#{@event.main_photo});" }
  .event-header-overlay
  .container
    .event-header.row.large-collapse{ data: { equalizer: '' } }
      %h2.title
        = @event.title
      .small-8.columns{ data: { equalizer: { watch:  '' } } }
        .when-and-where
          .labels
            .when
              .mic-label-black
                = "#{t('.when')}:"
            .where
              .mic-label-black
                = "#{t('.where')}:"
          .texts
            .when
              .event-label-text
                = @event.duration
            .where
              .event-label-text
                = @event.place_link_to_4sq
        .event-lead
          != strip_tags @event.lead
        .event-more-info
          %a.more-info#event-lead-more-info{ href:"#" }
            .show-all
              = t('helpers.more_info')
            .hide-all.hide
              = t('helpers.hide')
      .small-3.columns{ data: { equalizer: { watch:  ''} } }
        .organizers
          .organizers-title
            = "#{t('.organizator')}:"
          .organizers-names
            .organizer
              = @event.creator.decorate.short_name
        .join
          -#%a.join-button.mic-press-button{ href: "#" }
          %button.join-button.mic-press-button
            = t('.attend')
.more-lead-info.container
  .row.large-collapse
    .small-8.columns
      .more-lead-info-content
        != @event.description
.event-content.container
  .participans-container
    %h3.title
      Участники
      (150)
    %ul.small-block-grid-5.participants
      - 2.times do
        %li.participant.mic-member
          = render_element "mic_member", img_src: "http://cs14107.vk.me/c540101/v540101890/31512/YTONkYds8Y8.jpg", |
                                         link: "#", |
                                         name: "Калашников Павел", |
                                         role: "Организатор"
      - 8.times do
        %li.participant.mic-member
          = render_element "mic_member", img_src: "http://cs14107.vk.me/c540101/v540101890/31512/YTONkYds8Y8.jpg", |
                                         link: "#", |
                                         name: "Калашников Павел"
    .get-more-participants
      %button.mic-press-button.mic-button-small
        увидеть больше
