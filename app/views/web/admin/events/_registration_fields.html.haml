.registration_fields.row
  = f.input :role, as: :select, collection: enumerize_locales_hash(Event::Registration, :role)
  &nbsp;
  &nbsp;
  - if f.object.model.nil? || f.object.model.new_record?
    = f.input :user_id, as: :select, collection: users_cache_hash(@users), input_html: { class: :select2 }, label: false
  - else
    %span.norm-font
      = f.input :user_id, as: :hidden
      - if f.object.model.user
        = f.object.model.user.decorate.select_presentation
  = link_to_remove_association 'X', f, class: 'btn btn-danger remove-registration', data: { 'wrapper-class' => 'registration_fields' }
