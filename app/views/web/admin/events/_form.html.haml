.page-header
  %h1= page_title(action, Event.model_name.human)
.row
  .col-lg-6
    = simple_form_for [:admin, @event_form], input_html: { class: 'form-horizontal' } do |f|
      = f.input :title, as: :string
      = f.input :description, as: :text
      = f.input :main_photo, as: :file
      = f.input :begin_date, as: :datetime
      = f.input :end_date, as: :datetime
      = f.label :place
      .form-group.text.required
        = text_field :place, '', class: 'text required form-control'
      = link_to '#', id: 'update_list', class: 'btn btn-default' do
        %span.glyphicon.glyphicon-search
      = f.input :place, as: :select, collection: [], label: false
      = f.association :creator, label_method: lambda { |user| "#{user.id} | #{user.first_name} #{user.last_name}" }, value_method: :id, required: true
      = f.input :event_type, collection: Event.event_type.values
      = f.button :submit, t('helpers.links.save'), class: 'btn-success'
      = link_to t('helpers.links.back'), events_path, class: 'btn btn-default'
