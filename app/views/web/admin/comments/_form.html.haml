- model_class = Comment
- current_title = page_title(action, model_class.model_name.human)
- title current_title, :admin
.page-header
  %h1= page_title(action, Comment.model_name.human)
.row
  .col-lg-12
    = render 'layouts/web/admin/shared/errors', object: @comment_form
.row
  .col-lg-6
    = simple_form_for @comment_form, url: { controller: 'web/admin/comments', action: action }, input_html: { class: 'form-horizontal' } do |f|
      = f.input :text
      = f.input :record_id, as: :string
      = f.input :record_type
      = f.input :state_event, as: :state_event
      = f.button :submit, t('helpers.links.save'), class: 'btn-success'
      = link_to t('helpers.links.back'), admin_comments_path, class: 'btn btn-default'
