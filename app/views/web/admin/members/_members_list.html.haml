- model_class = Member
%table.table.table-condensed.table-hover
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:avatar)
      %th= model_class.human_attribute_name(:full_name)
      %th= model_class.human_attribute_name(:main_position)
      %th= model_class.human_attribute_name(:place)
      %th= t 'helpers.links.actions'
  %tbody
    - members.each do |member|
      %tr.link{ class: state_color(member), data: { href: edit_admin_member_path(member) } }
        %td= member.id
        %td= image_tag member.avatar.small
        %td= member.full_name
        %td= member.main_position_title
        %td= member.place
        %td
          - unless member.confirmed?
            = link_to admin_member_path(member, member: { state: :confirmed }), method: :patch, class: 'btn btn-success btn-xs' do
              %span.glyphicon.glyphicon-ok
          = link_to edit_admin_member_path(member), class: 'btn btn-warning btn-xs' do
            %span.glyphicon.glyphicon-pencil
          = link_to admin_member_path(member), method: :delete, class: 'btn btn-xs btn-danger' do
            %span.glyphicon.glyphicon-remove

= link_to t('.new', default: t('helpers.links.new')), new_admin_member_path, class: 'btn btn-primary'
