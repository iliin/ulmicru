- model_class = Banner
- current_title = page_title(action, model_class.model_name.human)
- title current_title, :admin
.page-header
  %h1= page_title(action, Banner.model_name.human)
.row
  .col-lg-6
    = simple_form_for @banner, url: { controller: 'web/admin/banners', action: action }, input_html: { class: 'form-horizontal' } do |f|
      = f.input :photo, as: :file
      = f.input :link, as: :string
      = f.input :begin_date, as: :datetime_picker
      = f.input :end_date, as: :datetime_picker
      = f.button :submit, t('helpers.links.save'), class: 'btn-success'
      = link_to t('helpers.links.back'), admin_members_path, class: 'btn btn-default'
