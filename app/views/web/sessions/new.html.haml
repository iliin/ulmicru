= simple_form_for @user, url: { controller: 'web/sessions', action: :create } do |f|
  = f.input :email, as: :string
  = f.input :password
  = f.button :submit

= link_to t('social_networks.vkontakte'), auth_path(:vkontakte)
= link_to t('social_networks.twitter'), auth_path(:twitter)
= link_to t('social_networks.facebook'), auth_path(:facebook)
= link_to t('social_networks.google'), auth_path(:google)
= link_to t('.register'), new_user_path
