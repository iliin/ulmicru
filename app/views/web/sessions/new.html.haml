= simple_form_for @user, url: { controller: 'web/sessions', action: :create } do |f|
  = f.input :email, label: t('activerecord.attributes.user.email')
  = f.input :password, label: t('activerecord.attributes.user.password')
  = f.button :submit, t('helpers.new.enter')
= link_to t('.register'), new_user_path
