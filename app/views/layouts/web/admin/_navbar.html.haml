%header.navbar.navbar-default
  .navbar-header
    %button.navbar-toggle{ type: :button, data: { toggle: :collapse, target: '.navbar-collapse' } }
      %span.icon-bar
      %span.icon-bar
      %span.icon-bar
    %a.navbar-brand{ href: root_path }
      = t('application.name')
  .navbar-collapse.collapse
    %ul.nav.navbar-nav
      = menu_item admin_users_path do
        = User.model_name.human.pluralize(:ru)
      = menu_item admin_members_path do
        = Member.model_name.human.pluralize(:ru)
      = menu_item admin_join_index_path do
        = t('activerecord.models.questionary').pluralize(:ru)
    %ul.nav.navbar-nav.navbar-right
      = menu_item admin_unviewed_index_path do
        %span.glyphicon.glyphicon-info-sign
        = notification_count
      %li.dropdown
        %a.dropdown-toggle{ href: '#', data: { toggle: :dropdown } }
          %span.glyphicon.glyphicon-trash
          = t('web.trash.title')
        %ul.dropdown-menu
          = menu_item type_admin_trash_index_path('user') do
            = User.model_name.human.pluralize(:ru)
          = menu_item type_admin_trash_index_path('member') do
            = Member.model_name.human.pluralize(:ru)

